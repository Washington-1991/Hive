<!-- Button trigger modal -->
<button type="button" class="checkpoint-button" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Je valide mes exercices
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <img class="smiley-pic" src="https://cdn.pixabay.com/photo/2017/01/31/00/39/clementine-2022656_1280.png">
        <h4><strong>BRAVO</strong></h4>
        <div>
          <p>Tous les objectifs sont remplis.</p>
          <p>Tu as brûlé <%= @sum %> kcl aujourd'hui.</p>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to dashboard_path do%>
        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Retour</button>
        <%end%>

        <%= link_to messages_path do%>
        <button type="button" class="btn btn-success">Partagez</button>
        <%end%>
      </div>
    </div>
  </div>
</div>
